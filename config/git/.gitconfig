[init]
    defaultBranch = main

[alias]
    diffy = diff --staged

[core]
    pager = delta
    editor = nvim

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    # side-by-side = true

[push]
    autoSetupRemote = true
    followTags = true     # automatically push tags when pushing branches

[merge]
    conflictstyle = zdiff3

[include]
    path = ~/.gitconfig.local
